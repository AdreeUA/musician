.events
	background-image url(__static__assets/events/bg-events.jpg)
	background-repeat no-repeat
	background-size cover
	background-position 50% 50%
	padding 212px 0 118px
	clearfix()

	+below('s')
		padding 30px 0 10px

	&__inner
		width 50%
		float right

		+below('m')
			width 80%
			float none
			center()

	&__item
		position relative

		&:not(:last-of-type)
			padding 23px 0 25px
			margin-bottom 165px

			&:before
				content ''
				position absolute
				bottom -165px
				left 34px
				height 165px
				border 1px solid #000

	.title
		color #42717e
		margin-bottom 98px
		margin-top 0

		+below('m')
			white-space nowrap

	&__category
		position relative
		color color-second
		font-size 23px
		margin 0 0 29px

		&:before
			content ''
			position absolute
			left 0
			bottom -11px
			width 132px
			border 1px solid

	&__disc
		line-height 1.5
		margin-bottom 87px
		position relative

		&:before
			content ''
			position absolute
			height 51px
			border 1px solid #000
			bottom -64px
			left 34px

	&__date
		color rgba(#000, .65)
